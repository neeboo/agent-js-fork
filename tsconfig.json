{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "build",
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "baseUrl": "scripts",
    "paths": {},
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ]
  },
  "include": [
    "typings/*.d.ts"
  ],
  "references": [
    {
      "path": "packages/principal"
    },
    {
      "path": "packages/identity-secp256k1"
    },
    {
      "path": "packages/agent"
    },
    {
      "path": "packages/candid"
    },
    {
      "path": "packages/identity"
    }
  ],
  "exclude": [
    "packages/example/vite.config.ts",
    "packages/example/tsconfig.json",
  ],
  "ts-node": {
    "swc": true
  }
}